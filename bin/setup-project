#!/bin/bash
# DEPRECATED: This script is kept for backward compatibility only.
# Use the OpenCode build-context-system command instead.

echo "⚠️  DEPRECATED: setup-project is deprecated"
echo ""
echo "Use this instead:"
echo "  opencode --command build-context-system -- PROJECT_NAME --type TYPE"
echo ""
echo "Example:"
echo "  opencode --command build-context-system -- my-api --type python"
echo ""
echo "The build-context-system provides:"
echo "  ✅ Complete OpenCode architecture"
echo "  ✅ Interactive interview for customization"
echo "  ✅ Custom agents, workflows, and contexts"
echo "  ✅ Production-ready configuration"

# If arguments provided, suggest the equivalent command
if [[ -n "$1" ]]; then
    echo ""
    echo "Equivalent command for your request:"
    CMD="opencode --command build-context-system -- $1"
    if [[ -n "$2" ]]; then
        CMD="$CMD --type $2"
    fi
    echo "  $CMD"
fi
