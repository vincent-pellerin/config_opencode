# OpenCode Environment Configuration
# Copy this file to ~/.opencode/.env and fill in your actual values
# NEVER commit the real .env file to version control

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
# Your Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your chat ID (get by messaging your bot and checking the API)
TELEGRAM_CHAT_ID=your_chat_id_here

# Your bot username (optional, defaults to @OpenCode)
TELEGRAM_BOT_USERNAME=@YourBotUsername

# Idle timeout in milliseconds (default: 5 minutes = 300000ms)
TELEGRAM_IDLE_TIMEOUT=300000

# Check interval in milliseconds (default: 30 seconds = 30000ms)
TELEGRAM_CHECK_INTERVAL=30000

# Enable/disable the plugin (true/false)
TELEGRAM_ENABLED=true

# ============================================================================
# Gemini API Configuration
# ============================================================================
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# VPS Configuration
# ============================================================================

# VPS Connection (vincent user)
VPS_HOST_VINCENT=your_vps_host
VPS_USER_VINCENT=vincent
VPS_SSH_ALIAS_VINCENT=vps_h
VPS_PORT_VINCENT=22

# VPS Connection (dlthub user)
VPS_HOST_DLTHUB=your_vps_host
VPS_USER_DLTHUB=dlthub
VPS_SSH_ALIAS_DLTHUB=vps_dlt
VPS_PORT_DLTHUB=22

# ============================================================================
# Local Development Paths
# ============================================================================
LOCAL_DEV_PATH=/home/vincent/dev
LOCAL_OBSIDIAN_VAULT=/home/vincent/dev/Obsidian

# ============================================================================
# VPS Paths (vincent user)
# ============================================================================
VPS_HOME_VINCENT=/home/vincent
VPS_DOCKER_PATH=/home/vincent/docker
VPS_CREDENTIALS_PATH=/home/vincent/.credentials
VPS_OBSIDIAN_VAULT=/home/vincent/obsidian-second-brain-vps

# VPS Project Paths (vincent user)
VPS_IMMO_STRAS=/home/vincent/immo-stras
VPS_GA4_REPORT=/home/vincent/ga4-weekly-report

# ============================================================================
# VPS Paths (dlthub user)
# ============================================================================
VPS_HOME_DLTHUB=/home/dlthub
VPS_DLTHUB_PROJECT=/home/dlthub/dlthub-project/dlthub-unified

# ============================================================================
# Docker Services
# ============================================================================
DOCKER_TRAEFIK_PATH=/home/vincent/docker/traefik
DOCKER_N8N_PATH=/home/vincent/docker/n8n-compose
DOCKER_MATOMO_PATH=/home/vincent/docker/matomo

# Docker Network
DOCKER_NETWORK=traefik-network

# ============================================================================
# n8n Configuration (VPS)
# ============================================================================
N8N_DOMAIN_NAME=your_domain.com
N8N_SUBDOMAIN=n8n
N8N_GENERIC_TIMEZONE=Europe/Berlin
N8N_SSL_EMAIL=your_email@domain.com
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_email@domain.com
N8N_BASIC_AUTH_PASSWORD=your_password_here

# n8n Webhook URLs
N8N_WEBHOOK_URL=https://n8n.your_domain.com/webhook/immo-scraping

# ============================================================================
# Matomo Configuration (VPS)
# ============================================================================
MATOMO_ROOT_PASSWORD=your_root_password
MATOMO_DB_NAME=matomo
MATOMO_DB_USER=your_db_user
MATOMO_DB_PASSWORD=your_db_password

# ============================================================================
# Obsidian Sync Configuration (VPS)
# ============================================================================
OBSIDIAN_DOMAIN=obsidian.your_domain.com
COUCHDB_USER=admin
COUCHDB_PASSWORD=your_couchdb_password

# ============================================================================
# Project-Specific Configuration
# ============================================================================

# dlthub-unified
DLTHUB_INGESTION_PATH=/home/dlthub/dlthub-project/dlthub-unified/ingestion
DLTHUB_TRANSFORMATION_PATH=/home/dlthub/dlthub-project/dlthub-unified/transformation
DLTHUB_LOGS_PATH=/home/dlthub/dlthub-project/dlthub-unified/logs

# immo-stras
IMMO_STRAS_LOCAL=/home/vincent/dev/immo-stras
IMMO_STRAS_VPS=/home/vincent/immo-stras
IMMO_DATABASE_PATH=/app/data/immo.db
IMMO_IMAGES_PATH=/app/images
IMMO_API_HOST=0.0.0.0
IMMO_API_PORT=8000
IMMO_BASIC_AUTH_USERS=your_basic_auth_here

# immo-stras - Search Criteria
IMMO_SEARCH_CITIES=Strasbourg,Lingolsheim,Oberhausbergen,Wolfisheim,Eckbolsheim
IMMO_SEARCH_ZIPCODES=67200,67380,67205,67202,67201
IMMO_SEARCH_PRICE_MAX=420000
